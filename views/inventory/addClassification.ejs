<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- title %></title>
</head>
<body>
    <div class="form__container">
        <h1><%- title %></h1>
        
        <!-- Display flash messages if available -->
        <% if (messages && messages.info) { %>
            <p class="info"><%= messages.info %></p>
        <% } %>
        <% if (messages && messages.error) { %>
            <p class="error"><%= messages.error %></p>
        <% } %>

        <!-- Display error messages from validation -->
        <% if (errors && errors.array().length > 0) { %>
            <ul class="notice">
                <% errors.array().forEach(error => { %>
                    <li><%= error.msg %></li>
                <% }) %>
            </ul>
        <% } %>

        <!-- Form to add new classification -->
        <form action="/inv/add-classification" method="POST">
            <label for="classification_name">Classification Name</label>
            <input 
                type="text" 
                name="classification_name" 
                id="classification_name" 
                required 
                pattern="^[a-zA-Z0-9]+$" 
                title="Classification name cannot contain spaces or special characters" 
                value="<%= classification_name || '' %>">

            <p class="form__direction">Note: Classification name cannot contain spaces or special characters.</p>
            
            <button type="submit">Add Classification</button>
        </form>
    </div>
</body>
</html>
