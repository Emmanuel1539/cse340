<% if (title) { %>
    <h1><%= title %></h1>
<% } else { %>
    <%- res.redirect('/') %>
<% } %>

<%- messages() %>

<h2>Welcome <%= accountData.account_firstname %></h2>

<!-- Update Account Information link for all users -->
<p><a href="../../account/update/<%= accountData.account_id %>">Update Account Information</a></p>

<!-- Conditional rendering for Manage Inventory section -->
<% if (accountData.account_type === 'Employee' || accountData.account_type === 'Admin') { %>
    <h3>Inventory Management</h3>
    <p><a href="../../inv/add-inventory">Add New Inventory</a></p>
<% } %>

<!-- Rendered for both logged-in clients and admin/employee types -->
<h2>Manage Inventory</h2>
<p>Choose a classification to see those inventory items.</p>

<%- classificationSelect %>
<table id="inventoryDisplay"></table>

<noscript>JavaScript must be enabled to use this page</noscript>
<script src="../../js/inventory.js"></script>
