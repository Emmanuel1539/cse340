
<% if(title) {%>
    <h1><%= title %></h1>
    <%} else{
        res.redirect('/')
    }
%>

<div class="form__container">
    <!-- error messages -->
    <% if (errors) { %>
        <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
        </ul>
    <% } %>

    <%- messages() %>
    <form id="loginForm" action="/account/login" method="POST" >
        <label for="email">Email</label>
        <input type="email" name="account_email" id="email" value="<%= locals.account_email %>" required>

        <label for="password">Password</label>
        <input type="password" name="account_password" id="password"  value="<%= locals.account_password %>" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" title="Password must be a minimum of 12 characters, contain at least 1 capital letter, 1 number and 1 special character." required >

        <button type="submit">Login</button>
        <p>No account? <span><a href="/account/register">Sign-up</a></span></p>
    </form>
</div>

